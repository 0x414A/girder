.g-access-modal-body
  padding-top 10px
  padding-bottom 5px

.g-public-container
  border-bottom 1px dashed #d7d7d7
  margin-bottom 11px

  .radio
    margin-top 0
    color #aaa

  .radio.g-selected
    color #333

    i.icon-globe
      color #3355a0
    i.icon-lock
      color #d0b822

.g-ac-list

  .g-group-access-entry,.g-user-access-entry
    margin 9px 0

  .g-access-icon
    color #666
    font-size 25px
    vertical-align top
    display inline-block

  .g-access-desc
    margin-left 7px
    display inline-block
    .g-desc-title
      font-size 14px
    .g-desc-subtitle
      font-size 12px
      color #888

  .g-access-col-left
    display inline-block
    vertical-align top
    width 260px

  .g-access-col-right
    display inline-block
    vertical-align top

    .g-action-remove-access
      color #999
      margin-left 20px
      font-size 16px

    .g-action-remove-access:hover
      color #d02344

.g-grant-access-container
  margin-top 10px
  padding-top 8px
  border-top 1px dashed #d7d7d7

  .form-group>label
    font-weight normal
    font-size 13px

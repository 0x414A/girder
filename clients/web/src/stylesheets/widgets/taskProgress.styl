@import 'nib'

.g-task-progress-bar
  width 140px
  display inline-block
  margin-bottom 0
  margin-right 7px
  border-radius 2px

  .progress-bar
    transition none

.g-task-progress-title
  display inline-block
  color #222
  line-height 20px
  vertical-align top
  margin 0
  padding 0

.g-task-progress-message
  color #888
  font-size 12px

$navWidth = 180px
$minHeight = 500px

#g-global-nav-container
  float left
  width $navWidth

#g-app-body-container
  padding 10px
  margin-left $navWidth + 1px
  min-height $minHeight

.g-validation-failed-message
  font-weight bold
  color #dd2222

.g-bottom-message
  margin-top 15px
  font-size 12px
  color #878080

@media (max-width: 720px)
  #g-global-nav-container
    float none
    width 100%

  #g-app-body-container
    margin-left 0

/**
 * Place global styles in this file.
 */

*:not(i)
  font-family 'Droid Sans',sans-serif !important

body
  padding 0

a
  cursor pointer
  text-decoration none !important

.g-clear-both
  clear both

.g-clear-right
  clear right

ul.dropdown-menu
  >li.dropdown-header
    padding 3px 20px 3px 8px
    margin-bottom 3px
    background-color #555
    font-weight bold
    color white
  >li>a
    padding 3px 20px 3px 8px
    >i
      margin-right 3px

.panel-heading
  padding 10px 10px

.panel-title
  font-size 15px

.g-body-title
  font-size 19px
  color #888

.g-dialog-subtitle
  font-size 15px
  padding 2px 8px
  border-radius 3px
  margin-top 5px
  width 100%
  background-color #666166
  box-shadow 0 0 3px rgba(0,0,0,0.4)
  color white

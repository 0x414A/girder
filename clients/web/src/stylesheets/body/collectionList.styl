.g-collection-list-entry
  padding 10px 12px
  margin 2px 0
  border-radius 5px
  background-color #f9fafa
  border 1px solid #d5dede

  .g-collection-title
    font-size 17px

  .g-collection-description
    color #666
    font-size 16px
    font-weight bold

  .g-collection-right-column
    border-left 1px solid #ddd
    padding-left 8px
    display inline
    width 290px
    font-size 14px
    float right
    color #909090

.g-collection-header
  padding-bottom 10px

  .g-collection-create-button
    margin-left 13px

  .g-collection-pagination
    display inline-block
    >ul
      margin 0 13px 0 0

    .pagination>li>a
      float none
      line-height 1.5
      padding 7px 12px

  .form-inline
    display inline

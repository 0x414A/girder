.g-collection-list-entry
  padding 10px 12px
  margin 2px 0
  border-radius 5px
  background-color #f9fafa
  border 1px solid #d5dede

  .g-collection-title
    font-size 17px

  .g-collection-description
    color #666
    font-size 16px
    font-weight bold

  .g-collection-right-column
    border-left 1px solid #ddd
    padding-left 8px
    display inline
    width 280px
    font-size 14px
    float right
    color #909090

.g-collection-menu
  padding-top 10px

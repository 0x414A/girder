.g-plugin-list-header
  padding 5px 10px
  background-color #e3f3f0
  color #6a6a6a
  font-size 15px
  border-radius 3px 3px 0 0
  border 1px solid #e2e2e2

.g-plugin-list-container
  border 1px solid #e2e2e2
  border-top none
  border-radius 0 0 3px 3px

  .g-plugin-list-item
    padding 10px
    border-bottom 1px solid #e2e2e2

    .g-plugin-name
      font-weight bold
      font-size 16px
      color #666

    .g-plugin-description
      margin-top 7px
      color #999

    &:last-child
      border-bottom none

  .bootstrap-switch
    float right

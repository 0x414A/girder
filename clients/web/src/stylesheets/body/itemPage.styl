.g-item-header
  border-bottom 1px solid #ddd
  margin-bottom 15px
  font-size 16px
  color #555

.g-item-edit-button
  margin-bottom 2px
  display inline
  font-size 14px
  float right

.g-item-files, .g-item-metadata
  margin-top 20px

.g-item-files-header, .g-item-metadata-header, .g-item-info-header
  background-color #f0f0f0
  padding 5px 6px
  color #555
  font-size 16px
  font-weight bold

.g-info-list-entry
  margin 3px
  margin-top 5px
  background-color #fbfbfb;

.g-item-metadata-row
  border-bottom 1px solid #f0f0f0
  font-size 14px
  color #777

.g-item-metadata-key, g-item-metadata-value
  padding 5px

.g-item-metadata-key
  font-weight bold

.g-file-list
  list-style-type none
  padding-left 0

  >li
    padding 3px 5px

mixin dateInfo(intro, property)
  .g-folder-info-line(property="#{property}")
    i.icon-clock
    span= intro
    span.g-bold-part= girder.formatDate(folder.get(property), girder.DATE_SECOND)

.modal-dialog
  .modal-content
    .modal-header
      button.close(data-dismiss="modal" aria-hidden="true") &times;
      h4.modal-title Folder information
      .g-dialog-subtitle
        i.icon-folder
        span= folder.name()
    .modal-body
      .g-folder-info-lines
        +dateInfo('Created ', 'created')
        if folder.get('created') !== folder.get('updated')
          +dateInfo('Last updated ', 'updated')

        .g-folder-info-line(property="size")
          i.icon-hdd
          span Size of all items in this folder is
          span.g-bold-part  #{girder.formatSize(folder.get('size'))}

      if folder.get('description')
        .g-folder-description!= girder.renderMarkdown(folder.get('description'))


    .modal-footer
      a.btn.btn-small.btn-default(data-dismiss="modal") Close
